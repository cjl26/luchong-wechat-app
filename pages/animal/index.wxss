/* pages/group/index.wxss */
.scroll-view-x{background-color: #fff;white-space: nowrap;}
.scroll-view-x .scroll-view-item{display:inline-block;margin:0 45rpx;line-height: 33px;}
.scroll-view-y{border-top:1px solid #ccc;}

.goods-img{display: inline-block;}
.group-item image {width: 200rpx;height: 200rpx;}
.goods-info{width: 62%;}
.goods-title {height: 150rpx;overflow: hidden;line-height:40rpx;}
.goods-price{color: red;margin-left: 20rpx;}
.user-option {width: 100%;margin-top: 2rpx;}
.btn{border:1px solid #ccc;padding: 10rpx;margin:20rpx 20rpx 20rpx 0;border-radius: 10rpx;}

.no-group{position: absolute;width: 100%}
.no-group image{width: 300rpx;height: 300rpx;}
.no-group>view{margin-top: 240rpx;}

