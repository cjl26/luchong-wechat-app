/**index.wxss**/

.container {
  background-color: #F2f2f2;
}
.swiper-container{
  width: 750rpx;
  position: relative;
}
.swiper_box {
  width: 100%;
  height:282rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:282rpx;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: all .6s;
  opacity: .5;
}
.swiper-container .dots .dot.active{
  width: 14rpx;
  opacity: 1;
}


.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #e64340;
}


.no-more-goods{

  margin-top: 20rpx;
  text-align: center;
  font-size: 24rpx;
  padding-bottom:250rpx;
  color: #999;
}

.type-search{
  width: 100%;
  height: 98rpx;
  background-color: #fff;
  overflow: hidden;
}
.type-search image{
   width: 750rpx;
   height: 98rpx;
}

.scroll-list{
  padding-top: 20rpx;
}

.scroll-list .a-scroll{
  border-radius:15px 15px 0px 15px;
