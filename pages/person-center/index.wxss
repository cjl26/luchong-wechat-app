.modal-input-down {
    /*width: auto;*/
    height: 70rpx;
    margin: 50rpx;
    padding-left: 30rpx;
    background-color: #eeeeee;
    border-radius: 50rpx;
    display: flex;
    justify-content: space-between;
    align-items:flex-end;
}

.modal-input-down-left {
    height: 70rpx;
    line-height:70rpx;
    font-size: 26rpx;
    flex:5;
    text-align: left;
    padding-left: 20rpx;
}
.modal-input-down-right {
    line-height:70rpx;
    flex:3;
    background-color: #bd3027;
    text-overflow:clip;
    font-size: 26rpx;
    text-align: center;
    color: white;
    border-radius: 0rpx 50rpx 50rpx 0rpx ;
}
.modal-btn{
    border-top:1px solid #bd3027;
    height: 80rpx;
    width: auto;
    display: flex;
    justify-content: space-around;
}
.modal-btn .modal-btn-left{
    line-height: 80rpx;
    width: 375rpx;
    background-color: white;
    color: #bd3027;
    text-align: center;
}
.modal-btn  .modal-btn-right{
    line-height: 80rpx;
    width: 375rpx;
    background-color: #bd3027;
    color: white;
    text-align: center;
}
